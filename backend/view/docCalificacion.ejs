        <td>DEVjcrc</td>
      </tr>
    </table>

    <hr />
    <h3>Listar Calificaciones</h3>
    <table>
      <tr>
        <td>Número</td>
        <td>3</td>
      </tr>
      <tr>
        <td>Nombre del Servicio</td>
        <td>Listar Calificaciones</td>
      </tr>
      <tr>
        <td>URI</td>
        <td>/v1/calificaciones/:id</td>
      </tr>
      <tr>
        <td>Descripción</td>
        <td>Permite listar todas las calificaciones de un usuario creado en la base de datos</td>
      </tr>
      <tr>
        <td>Verbo HTTP</td>
        <td>GET</td>
      </tr>
      <tr>
        <td>HEADER</td>
        <td>token: token</td>
      </tr>
      <tr>
        <td>Usuarios</td>
        <td>VENDEDOR, COMPRADOR</td>
      </tr>
      <tr>
        <td>PETICIÓN BODY</td>
        <td>NULL</td>
      </tr>
      <tr>
        <td>RESPUESTA JSON</td>
        <td>
          <strong>Correcto:</strong> Status: 200
          <pre><code>{
  "calificaciones": [
    {
      "id_usuario_cali": 1,
      "estrellas_cali": 5,
      "opiniones_cali": "Excelente servicio",
      "fk_usuario": 2
    }
  ],
  "stats": {
    "total": 10,
    "promedio": 4.5,
    "cinco_estrellas": 5,
    "cuatro_estrellas": 3,
    "tres_estrellas": 1,
    "dos_estrellas": 1,
    "una_estrella": 0
  }
}</code></pre>
          <strong>Incorrecto:</strong> Status: 200
          <pre><code>{
  "message": "No hay calificaciones disponibles"
}</code></pre>
          <strong>Error:</strong> Status: 500
          <pre><code>{
  "message": "Error en el servidor: " + error
}</code></pre>
        </td>
      </tr>
      <tr>
        <td>Desarrollador</td>
        <td>Juan Camilo Realpe Ceron</td>
      </tr>
      <tr>
        <td>Rama</td>
